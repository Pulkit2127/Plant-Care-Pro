<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Upload a photo of your plant's leaf."
            android:textColor="#188307"
            android:layout_marginLeft="8dp"
            android:textSize="32dp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:paddingTop="6dp"
            android:layout_marginLeft="10dp"
            android:text="Here, you can easily upload an image of a leaf from your plant. Simply snap a clear photo and our advanced image recognition technology will swiftly analyze the leaf and detect any potential diseases or issues."
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!-- Image Upload Box -->

        <LinearLayout
            android:id="@+id/boxpe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Image Upload Box with Text -->
            <LinearLayout
                android:id="@+id/box"
                android:layout_width="350sp"
                android:layout_height="150sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select Image" />
            </LinearLayout>

            <!-- Separator -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------or------"
                android:textAlignment="center"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <!-- Upload Photo Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/photo_button"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="350dp"
            android:layout_height="72dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#E7FAF4"
            android:text="Upload Photo"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:textColor="#188307"
            android:textSize="32dp"
            app:cornerRadius="20dp" />

        <!-- Get Result Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonresult"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="350dp"
            android:layout_height="72dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#0EA772"
            android:text="Get Result"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="20dp" />

    <!-- ... (existing widgets above) ... -->

        <TextView
            android:id="@+id/title_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Most Probable Diseases"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textColor="#188307"
            android:textStyle="bold"
            >

        </TextView>
    <!-- Result 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Result 1 Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Result 1"
            android:textColor="#188307"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!-- Method to Cure for Result 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Disease 1"
            android:id="@+id/result1"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Method to Cure for Result 1"
            android:id="@+id/result1_sol"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Result 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Result 2 Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Result 2"
            android:textColor="#188307"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!-- Method to Cure for Result 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Disease 2"
            android:id="@+id/result2"

            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Method to Cure for Result 2"
            android:id="@+id/result2_sol"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Result 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <!-- Result 3 Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Result 3"
            android:textColor="#188307"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!-- Method to Cure for Result 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Disease 3"
            android:id="@+id/result3"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="16dp"
            android:text="Method to Cure for Result 3"
            android:id="@+id/result3_sol"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="These are the diseases your plant might be suffering with.You can easily find solutions for diseases now!.For more details contact specialised expert."
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#188307"
            android:textStyle="bold"
            >

        </TextView>
        <com.google.android.material.button.MaterialButton

            android:id="@+id/button_result"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="350dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#0EA772"
            android:text="Contact Expert"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="20dp"

            >

        </com.google.android.material.button.MaterialButton>
    <!-- ... (existing widgets below) ... -->

    </LinearLayout>

</ScrollView>
